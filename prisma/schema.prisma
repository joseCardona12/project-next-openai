generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id            Int         @id @default(autoincrement())
  name          String
  email         String      @unique
  password      String    
  gender_id     Int         
  gender        Gender      @relation(fields: [gender_id], references: [id])
  createdAt     DateTime    @default(now())
  contexts      Context[]
  prompts       Prompt[]
}

model Gender{
  id            Int          @id @default(autoincrement())
  name          String       @unique
  users         User[]
}

model Age_range{
  id            Int          @id @default(autoincrement())
  name          String       @unique
  contexts      Context[]
}

model Day_week{
  id            Int          @id @default(autoincrement())
  quantity_day  String       
  contexts     Context[]
}

model Current_level{
  id            Int          @id @default(autoincrement())
  name          String 
  contexts     Context[]      
}

model Target{
  id            Int          @id @default(autoincrement())
  name          String 
  contexts     Context[]       
}

model Context{
  id            Int         @id @default(autoincrement())
  age_range_id  Int
  day_week_id   Int
  user_id       Int
  current_level_id Int    
  target_id     Int
  age_ranges     Age_range     @relation(fields: [age_range_id], references: [id])
  day_weeks      Day_week      @relation(fields: [day_week_id], references: [id]) 
  users          User          @relation(fields: [user_id], references: [id]) 
  current_levels  Current_level      @relation(fields: [current_level_id], references: [id]) 
  targets        Target        @relation(fields: [target_id], references: [id]) 
}

model Prompt {
  id            Int          @id @default(autoincrement())
  desciption    String
  user_id       Int
  users          User        @relation(fields: [user_id], references: [id]) 
  answers        Answer[]
}

model Answer {
  id            Int          @id @default(autoincrement())
  desciption    String
  prompt_id     Int
  prompts        Prompt      @relation(fields: [prompt_id], references: [id]) 
}

